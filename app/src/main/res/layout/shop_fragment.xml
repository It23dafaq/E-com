<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Shop">

    <TextView
            android:text="Your Cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dada" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/shopcart" app:layout_constraintVertical_bias="0.51"
            android:background="@color/colorPrimary" android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
            android:drawablePadding="@dimen/activity_horizontal_margin"/>
    <Button
            android:text="Buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmOrder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shopcart" android:layout_marginBottom="90dp"
            app:layout_constraintVertical_bias="0.81"/>
    <androidx.recyclerview.widget.RecyclerView

            android:layout_width="363dp"
            android:layout_height="487dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/fragment_cart_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/shopcart"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dada" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/confirmOrder"/>
</androidx.constraintlayout.widget.ConstraintLayout>